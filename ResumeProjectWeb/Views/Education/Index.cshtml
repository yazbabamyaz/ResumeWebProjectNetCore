
@model IEnumerable<EducationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Eğitim Bilgileri</h1>
<table class="table table-bordered">
    <tr>
        
        <th>Okul Adı</th>
        <th>Açıklama</th>    
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            
            <td>@item.SchoolName</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
           
            @*<td><a href="/Experience/DeleteExperience/@item.Id"  class="btn btn-danger">Delete</a></td>*@
            <td><a asp-action="DeleteEducation" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Silme işlemi onaylansın mı?')">Sil</a></td>
            <td><a asp-action="UpdateEducation" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a asp-controller="Education" asp-action="AddEducation" class="btn btn-primary"> Yeni Kayıt Ekle</a>

