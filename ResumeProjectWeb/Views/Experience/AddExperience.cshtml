@model ExperienceDto
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Deneyim Ekleme Sayfası</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="form-group" method="post">
    <input type="text" asp-for="ExperienceName" class="form-control" placeholder="Deneyim ismi giriniz..." /> <span asp-validation-for="ExperienceName" class="text-danger"></span>
    <br />
    <input type="text" asp-for="Date" class="form-control" placeholder="Tarih Aralığı Giriniz..." /> <span asp-validation-for="Date" class="text-danger"></span>
    <br />

    <textarea asp-for="Description" class="form-control" placeholder="Açıklama Giriniz..." rows="5"></textarea><span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button type="submit" class="btn btn-info">Kaydet</button>
</form>