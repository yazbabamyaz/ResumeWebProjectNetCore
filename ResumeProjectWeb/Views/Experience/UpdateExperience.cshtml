@model ExperienceDto
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Deneyim Güncelleme Sayfası</h1>

<form class="form-group" method="post">
    <input type="text" asp-for="ExperienceName" class="form-control" placeholder="Firma ismi giriniz..." />    
    <br />
    <input type="text" asp-for="Date" class="form-control" placeholder="Tarih Aralığı giriniz..." />

    <textarea asp-for="Description" class="form-control" placeholder="Deneyim Açıklama Giriniz..." rows="5"></textarea>
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>