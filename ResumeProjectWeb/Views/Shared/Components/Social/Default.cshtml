@model IEnumerable<Social>
@{
    Layout = null;
}

<footer class="footer-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="footer-text text-center wow fadeInDown" data-wow-delay="0.3s">
                    <ul class="social-icon">

                        @foreach (var item in Model)
                        {
                             <li>
                            <a class="facebook" href="@item.Link"><i class="@item.Icon"></i></a>
                            </li>
                        }
                        
                         
                    </ul>
                    <p>Copyright © @DateTime.Now.Year - Web projesi</p>
                </div>
            </div>
        </div>
    </div>
</footer>
