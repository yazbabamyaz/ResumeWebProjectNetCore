@model IEnumerable<WorkDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Proje Sayfası</h1>

<table class="table table-bordered">
    <tr>

        <th>Proje Resim</th>
        <th>Bağlantı</th>        
        <th>Proje İsmi</th>        
        <th>Proje Durum</th>        
        <th>Proje Ödül</th>        
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>


    @foreach (var item in Model)
    {
            <tr>

                <td style="text-align:center"> <img src="~/Admin/images/work/@item.Image" width="60px" height="60px"> </td>
                <td>@item.Link</td>
                <td>@item.ProjectName</td>
            @{
                string status = (item.ProjectStatus == true) ? "Bitti" : "Devam ediyor";
                string isAward=(item.ProjectAward == true) ? "Evet" : "Hayır";
            }
            <td>@status</td>
                <td>@isAward</td>

            @*<td><a href="/Experience/DeleteExperience/@item.Id"  class="btn btn-danger">Delete</a></td>*@
                <td><a asp-action="DeleteWork" asp-controller="Work" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Silmek istiyor musun?')">Delete</a></td>
                <td><a asp-action="UpdateWork" asp-controller="Work" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
            </tr>
    }
</table>
<a asp-controller="Work" asp-action="AddWork" class="btn btn-primary"> Yeni Proje Ekle</a>

